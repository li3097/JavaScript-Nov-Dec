var isEven = function(number) {
  // Your code goes here!
  if(number % 2 === 0){
      return true;
  }
  else{
      return false;
  }
};

var isEven = function(number) {
  // Your code goes here!
  if(number % 2 === 0){
      return true;
  }
  else if(isNaN (number)){
      return "This isn't a number";
  }
  else{
      return false;
  }
};

isNaN(NaN);

